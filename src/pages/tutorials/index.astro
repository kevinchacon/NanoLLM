---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('tutorials')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: min(980px, calc(100% - 2rem));
				margin: 0 auto;
				padding: 3rem 1rem 4rem;
			}
			
			.hero {
				text-align: center;
				margin-bottom: 4rem;
				padding: 2rem 0 3rem;
			}
			
			.hero h1 {
				font-size: 2.8rem;
				font-weight: 800;
				margin: 0 0 1rem;
				background: linear-gradient(135deg, rgb(var(--black)) 0%, rgba(var(--gray-dark), 0.85) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				letter-spacing: -0.02em;
			}
			
			.hero p {
				color: rgb(var(--gray));
				font-size: 1.15rem;
				max-width: 58ch;
				margin: 0 auto;
				line-height: 1.6;
			}
			
			.tutorials-grid {
				display: grid;
				gap: 1.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			
			.tutorial-card {
				background: rgba(var(--surface), 0.95);
				border: 1px solid rgba(var(--border), 0.6);
				border-radius: 12px;
				overflow: hidden;
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
			}
			
			.tutorial-card:hover {
				border-color: rgba(var(--accent-rgb), 0.5);
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(var(--accent-rgb), 0.1);
				transform: translateY(-2px);
			}
			
			.article-link {
				display: grid;
				grid-template-columns: 280px 1fr;
				gap: 1.5rem;
				align-items: center;
				text-decoration: none;
				padding: 1.2rem;
			}
			
			.tutorial-image {
				position: relative;
				border-radius: 8px;
				overflow: hidden;
				aspect-ratio: 16 / 9;
			}
			
			.tutorial-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.3s ease;
			}
			
			.tutorial-card:hover .tutorial-image img {
				transform: scale(1.05);
			}
			
			.article-text {
				display: flex;
				flex-direction: column;
				gap: 0.6rem;
			}
			
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.3;
				font-size: 1.35rem;
				font-weight: 700;
				transition: color 0.2s ease;
			}
			
			.tutorial-card:hover .title {
				color: var(--accent);
			}
			
			.summary {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.98rem;
				line-height: 1.5;
			}
			
			.date {
				margin: 0;
				color: rgba(var(--gray), 0.8);
				font-size: 0.85rem;
				font-weight: 500;
				text-transform: uppercase;
				letter-spacing: 0.03em;
			}
			
			@media (max-width: 820px) {
				.article-link {
					grid-template-columns: 1fr;
				}
				
				.hero h1 {
					font-size: 2.2rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Tutorials</h1>
				<p>
					Step-by-step guides and engineering notes on building a GPT-style language model from scratch. Learn by doing.
				</p>
			</section>
			<ul class="tutorials-grid">
				{
					posts.map((post) => (
						<li class="tutorial-card">
							<a class="article-link" href={`/tutorials/${post.id}/`}>
								{post.data.heroImage && (
									<div class="tutorial-image">
										<Image width={560} height={315} src={post.data.heroImage} alt="" />
									</div>
								)}
								<div class="article-text">
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									<h2 class="title">{post.data.title}</h2>
									<p class="summary">{post.data.description}</p>
								</div>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
