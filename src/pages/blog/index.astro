---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 940px;
			}
			section {
				max-width: 840px;
				margin: 0 auto;
			}
			section > p {
				color: rgb(var(--gray));
				max-width: 62ch;
			}
			ul {
				display: grid;
				gap: 0.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				border-bottom: 1px solid rgba(var(--border), 0.75);
				padding: 0.95rem 0;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			.article-link {
				display: grid;
				grid-template-columns: 210px minmax(0, 1fr);
				gap: 0.9rem;
				align-items: center;
			}
			ul li img {
				margin: 0;
				border-radius: 8px;
			}
			.article-text {
				display: grid;
				gap: 0.3rem;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.2;
				font-size: 1.08rem;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.82rem;
			}
			ul li a:hover .title {
				color: rgb(var(--accent));
			}
			.summary {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.93rem;
			}
			@media (max-width: 720px) {
				.article-link {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>NanoLLM Blog</h1>
				<p>
					Step-by-step tutorials and engineering notes on building a GPT-style language model from scratch.
				</p>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a class="article-link" href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={420} height={240} src={post.data.heroImage} alt="" />
									)}
									<div class="article-text">
										<h4 class="title">{post.data.title}</h4>
										<p class="summary">{post.data.description}</p>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
