---
import { SITE_GITHUB_URL, SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</div>
		<div class="social-links">
			<a href="/rss.xml">
				<span class="sr-only">View RSS feed</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M6.18 15.64a2.18 2.18 0 1 0 0 4.36 2.18 2.18 0 0 0 0-4.36ZM4 10.91V14a6 6 0 0 1 6 6h3.09A9.09 9.09 0 0 0 4 10.91Zm0-6.91v3.09C11.18 7.09 16.91 12.82 16.91 20H20C20 11.4 12.6 4 4 4Z"
					></path></svg
				>
			</a>
			<a href={SITE_GITHUB_URL} target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Open NanoLLM GitHub repository</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.1em;
		background: rgba(13, 14, 19, 0.72);
		backdrop-filter: blur(8px);
		border-bottom: 1px solid rgba(var(--border), 0.55);
		position: sticky;
		top: 0;
		z-index: 20;
	}
	h2 {
		margin: 0;
		font-size: 0.95rem;
		letter-spacing: 0.11em;
		text-transform: none;
		font-weight: 650;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.1rem;
		max-width: 980px;
		margin: 0 auto;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.2rem;
	}
	nav a {
		padding: 0.9em 0.62em;
		color: rgb(var(--gray-dark));
		border-bottom: 1px solid transparent;
		text-decoration: none;
		font-size: 0.89rem;
		font-weight: 500;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: rgb(var(--black));
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.social-links a {
		align-items: center;
		opacity: 0.72;
		padding-inline: 0.1rem;
	}
	.social-links a:hover {
		opacity: 1;
		color: rgb(var(--black));
	}
	@media (max-width: 720px) {
		header {
			padding: 0 0.5em;
		}
		nav a {
			padding-inline: 0.4em;
		}
		.social-links {
			display: none;
		}
	}
</style>
