---
import { SITE_GITHUB_URL, SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav aria-label="Main navigation">
		<div class="nav-brand">
			<a href="/" aria-label="NanoLLM â€” Home">
				<svg class="brand-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
					<circle cx="6" cy="12" r="2.5" fill="currentColor" opacity="0.8"/>
					<circle cx="18" cy="12" r="2.5" fill="currentColor" opacity="0.8"/>
					<circle cx="12" cy="6" r="2.5" fill="currentColor"/>
					<circle cx="12" cy="18" r="2.5" fill="currentColor" opacity="0.6"/>
					<line x1="8" y1="11" x2="10.5" y2="7.5" stroke="currentColor" stroke-width="1.5" opacity="0.5"/>
					<line x1="13.5" y1="7.5" x2="16" y2="11" stroke="currentColor" stroke-width="1.5" opacity="0.5"/>
					<line x1="8" y1="13" x2="10.5" y2="16.5" stroke="currentColor" stroke-width="1.5" opacity="0.4"/>
					<line x1="13.5" y1="16.5" x2="16" y2="13" stroke="currentColor" stroke-width="1.5" opacity="0.4"/>
				</svg>
				{SITE_TITLE}
			</a>
		</div>
		<div class="nav-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/tutorials">Tutorials</HeaderLink>
			<a href={SITE_GITHUB_URL} target="_blank" rel="noopener noreferrer" class="nav-github">
				GitHub
				<svg width="16" height="16" viewBox="0 0 16 16" fill="none" style="opacity: 0.6;" aria-hidden="true">
					<path d="M6 3L10 8L6 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0;
		background: rgba(13, 14, 19, 0.6);
		backdrop-filter: blur(16px);
		border-bottom: 1px solid rgba(var(--accent-rgb), 0.1);
		position: sticky;
		top: 0;
		z-index: 20;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		max-width: 1140px;
		margin: 0 auto;
		padding: 1rem 2rem;
	}
	.nav-brand a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 1.1rem;
		font-weight: 700;
		color: rgb(var(--black));
		text-decoration: none;
		letter-spacing: -0.02em;
		transition: all 0.2s ease;
	}
	.nav-brand a:hover {
		color: var(--accent);
	}
	.brand-icon {
		width: 24px;
		height: 24px;
		color: var(--accent);
		transition: transform 0.2s ease, color 0.2s ease;
	}
	.nav-brand a:hover .brand-icon {
		transform: scale(1.1);
		color: rgb(var(--black));
	}
	.nav-center {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.nav-center :global(a) {
		padding: 0.5rem 1rem;
		color: rgba(var(--gray-dark), 0.8);
		border-radius: 8px;
		text-decoration: none;
		font-size: 0.95rem;
		font-weight: 500;
		transition: all 0.2s ease;
		position: relative;
	}
	.nav-center :global(a:hover) {
		color: rgb(var(--black));
		background: rgba(var(--surface), 0.6);
	}
	.nav-center :global(a.active) {
		color: var(--accent);
		background: rgba(var(--accent-rgb), 0.1);
	}
	.nav-github {
		display: inline-flex !important;
		align-items: center;
		gap: 0.3rem;
		margin-left: 0.5rem;
		padding: 0.5rem 1rem !important;
		border: 1px solid rgba(var(--border), 0.5);
		border-radius: 8px;
		background: rgba(var(--surface), 0.4);
	}
	.nav-github:hover {
		border-color: rgba(var(--accent-rgb), 0.5) !important;
		background: rgba(var(--surface), 0.7) !important;
	}
	@media (max-width: 720px) {
		nav {
			padding: 0.8rem 1rem;
		}
		.nav-brand a {
			font-size: 1rem;
		}
		.brand-icon {
			font-size: 1.2rem;
		}
		.nav-center {
			gap: 0.3rem;
		}
		.nav-center :global(a) {
			padding: 0.4rem 0.7rem;
			font-size: 0.9rem;
		}
		.nav-github {
			display: none !important;
		}
	}
</style>
